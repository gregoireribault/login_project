{% extends 'base.html.twig' %}

{% block title %}Forgotten password{% endblock %}

{% block body %}
    <div class="card centered">
        <div class="card-body">
            <h1 class="h3 mb-3 font-weight-normal">Forgotten password</h1>
            {{ form_start(form, {'attr':{'novalidate':true, 'class':'needs-validation'} }) }}
            <div class="form-floating mb-3">
                {{ form_widget(form.email, { 'attr': {
                    'class': 'form-control',
                    'autofocus': true,
                    'placeholder': 'name@example.com',
                    'autocomplete': 'email',
                    'required': true} }) }}
                {{ form_label(form.email) }}
                <div class="invalid-feedback">
                    Please choose an email.
                </div>
            </div>
            <button class="btn btn-lg btn-primary float-end" type="submit">Send email</button>
            {{ form_end(form) }}
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-center">
                <a class="mx-2" href="{{ path('app_login') }}">Back to login page</a>
            </div>
        </div>
    </div>
{% endblock %}
